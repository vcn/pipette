{
  "name": "vcn/pipette",
  "description": "Easily extract what you need out of JSON.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Robert Versteegt",
      "email": "rversteegt@vcn.nl"
    }
  ],

  "require": {
    "php": "^8.1",
    "ext-json": "*"
  },

  "autoload": {
    "psr-4": {
      "Vcn\\Pipette\\": "src/"
    }
  },

  "suggest": {
    "vcn/enum": "To extract Vcn\\Lib\\Enum values.",
    "justinrainbow/json-schema": "To validate against JSON Schemas."
  },

  "require-dev": {
    "friends-of-phpspec/phpspec-code-coverage": "^6.0",
    "phpspec/phpspec": "^7.2",
    "phpunit/phpunit": "^9.5",
    "justinrainbow/json-schema": "^5.2",
    "vcn/enum": "^1.0"
  },

  "autoload-dev": {
    "classmap": ["tests/res/"]
  }
}
