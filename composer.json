{
    "name": "vcn/pipette",
    "description": "Easily extract what you need out of JSON.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Versteegt",
            "email": "rversteegt@vcn.nl"
        }
    ],

    "require": {
        "php": "^7.1",

        "ext-json": "*"
    },

    "autoload": {
        "psr-4": {
            "Vcn\\Pipette\\": "src/"
        }
    },

    "suggest": {
      "vcn/enum": "To extract Vcn\\Lib\\Enum values."
    },

    "require-dev": {
        "leanphp/phpspec-code-coverage": "^4.2",
        "phpspec/phpspec": "^4.3",
        "phpunit/phpunit": "^7.1",

        "vcn/enum": "^1.0"
    },

    "autoload-dev": {
        "classmap": ["tests/res/"]
    }
}
